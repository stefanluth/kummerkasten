generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @unique @default(uuid())
  title     String
  content   String
  upvotes   Int      @default(0)
  createdAt DateTime @default(now())
}

model Vote {
  id          String @id @unique @default(uuid())
  fingerprint String
  postId      String
}

model Report {
  id          String @id @unique @default(uuid())
  fingerprint String
  postId      String
}
